@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="ar">
<head>
  
    <style>
     

        /* قسم الرسالة والرؤية */
        .mission-vision {
            padding: 40px 20px;
            background-color: #fff;
        }

            .mission-vision h2 {
                text-align: center;
                margin-bottom: 20px;
            }

 

         .card {
         
          text-align: center;
        
        } 

            .card h3 {
                margin-top: 10px;
                font-size: 20px;
            } 

        /* قسم الإنجازات */
        .achievements {
            padding: 40px 20px;
            background-color: #eee;
            text-align: center;
        }

        .achievement-stats {
            display: flex;
            justify-content: center;
            gap: 30px;
        }

        .stat h3 {
            font-size: 36px;
            color: #C7A250;
        }

        .stat p {
            font-size: 18px;
            margin-top: 5px;
        }

        /* قسم أعضاء هيئة التدريس */
        .faculty {
            padding: 40px 20px;
            background-color: #fff;
        }

        .faculty-grid {
            display: flex;
            justify-content: center;
            gap: 20px;
        }

        .faculty-card {
            background-color: #f8f8f8;
            padding: 20px;
            border-radius: 10px;
            text-align: center;
            width: 200px;
        }

            .faculty-card img {
                width: 100px;
                height: 100px;
                border-radius: 50%;
                object-fit: cover;
            }

            .faculty-card h3 {
                margin-top: 10px;
                font-size: 18px;
            }
       


    </style>
</head>
